# Variables de Entorno - Scrapper LLM Inmobiliario
# Copia este archivo a .env y configura según tu entorno

# CONFIGURACIÓN GENERAL
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Puertos
PORT=8000
DASHBOARD_PORT=8080
HEALTH_PORT=8000

# CONFIGURACIÓN DE CHROME/SELENIUM
CHROME_HEADLESS=true
CHROME_NO_SANDBOX=true
CHROME_DISABLE_DEV_SHM_USAGE=true
CHROME_DISABLE_GPU=true
WEBDRIVER_CHROME_DRIVER=/usr/local/bin/chromedriver

# Selenium configuración
SELENIUM_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=10
SELENIUM_PAGE_LOAD_TIMEOUT=30

# CONFIGURACIÓN DE IA LOCAL
ML_MODELS_PATH=/app/ml-models
EMBEDDING_MODEL_PATH=/app/ml-models/Qwen3-Embedding-8B-Q6_K.gguf
RERANKER_MODEL_PATH=/app/ml-models/qwen3-reranker-8b-q6_k.gguf

# Configuración VRAM
VRAM_LIMIT=8GB
GPU_ENABLED=true
CUDA_VISIBLE_DEVICES=0

# Configuración de modelos
MODEL_CONTEXT_SIZE=8192
MODEL_GPU_LAYERS=30
MODEL_BATCH_SIZE=1024
MODEL_THREADS=6

# CONFIGURACIÓN DE DATOS
DATA_DIR=/app/data
LOGS_DIR=/app/logs
CACHE_DIR=/app/cache
FAISS_INDEX_PATH=/app/data/faiss_index

# Base de datos (opcional)
DATABASE_URL=sqlite:///app/data/scrapper.db

# Redis (opcional)
REDIS_URL=redis://localhost:6379/0

# CONFIGURACIÓN DE SCRAPING
TARGET_URL=https://www.assetplan.cl
MAX_PROPERTIES=50
SCRAPING_DELAY=1.0
RETRY_ATTEMPTS=3

# User Agent
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36

# CONFIGURACIÓN DE API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=false

# CONFIGURACIÓN DE SEGURIDAD
API_KEY=your-secure-api-key-here
SECRET_KEY=your-secure-secret-key-here

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# CONFIGURACIÓN DE MONITOREO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Métricas
METRICS_ENABLED=true
METRICS_PORT=9090

# Health checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# CONFIGURACIÓN DE DESARROLLO
JUPYTER_ENABLE_LAB=yes
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

# Hot reload
WATCHDOG_ENABLED=true
RELOAD_PATTERNS=["*.py", "*.html", "*.js", "*.css"]

# CONFIGURACIÓN DE TESTING
TEST_DATABASE_URL=sqlite:///app/data/test_scrapper.db
TEST_TIMEOUT=60
TEST_PARALLEL_WORKERS=2
TEST_VERBOSE=true